exercício Média 2
#include <iostream>

int main()
{
    double A, B, C, MEDIA;
    
    printf("n1 = \n");
    scanf("%lf", &A);
    
    printf("n2 = \n");
    scanf("%lf", &B);
    
    printf("n3 = \n");
    scanf("%lf", &C);
    
    MEDIA = (A * 2 + B * 3 + C * 5) / 10.0; 
    
    printf ("MEDIA = %.1lf \n", MEDIA);
}
